<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.zpc.mvc.store.dao.StoreServicesDescDao" >

    <resultMap id="StoreServicesDesc" type="cn.zpc.mvc.store.entity.StoreServicesDesc">
        <id column="id" property="id"></id>
        <result column="store_id" property="storeId"></result>
        <result column="general" property="general"></result>
        <result column="ext" property="ext"></result>
        <result column="desc" property="desc"></result>
    </resultMap>

    <select id="getServices" resultMap="StoreServicesDesc">
        SELECT
          *
        FROM
          lb_store_with_services
        WHERE
          store_id = #{storeId}
    </select>

    <update id="update">
        UPDATE
          lb_store_with_services
        SET
        <if test="general != null and general !=''">
            general = #{general},
        </if>
        <if test="ext != null  and ext !=''">
            ext = #{ext},
        </if>
        <if test="desc != null  and desc !=''">
            `desc` = #{desc},
        </if>
          store_id = #{storeId}
        WHERE
        store_id = #{storeId}
    </update>

    <insert id="insert">
        INSERT
          lb_store_with_services
        (
            <if test="general != null and general !=''">
                general,
            </if>
            <if test="ext != null and ext !=''">
                ext,
            </if>
            <if test="desc != null and desc != ''">
                `desc`,
            </if>
            store_id
        )
        VALUES
        (
        <if test="general != null and general != ''">
            #{general},
        </if>
        <if test="ext != null and ext !=''">
            #{ext},
        </if>
        <if test="desc != null and desc != ''">
            #{desc},
        </if>
            #{storeId}
        )
    </insert>

</mapper>