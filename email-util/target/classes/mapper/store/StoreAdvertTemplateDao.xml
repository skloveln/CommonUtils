<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.zpc.mvc.store.dao.StoreAdvertTemplateDao" >

    <resultMap id="StoreAdvertTemplate" type="cn.zpc.mvc.store.entity.StoreAdvertTemplate">
        <id column="id" property="id"></id>
        <result column="image" property="image"></result>
        <result column="subject" property="subject"></result>
    </resultMap>

    <select id="getAll" resultMap="StoreAdvertTemplate">
        SELECT
          *
        FROM
          lb_store_ad_template
        WHERE
          deleted = 0
    </select>

    <select id="get" resultMap="StoreAdvertTemplate">
        select 
        *
        from
          lb_store_ad_template
        WHERE
          id = #{id}
    </select>

</mapper>