<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.zpc.mvc.scene.dao.SceneWorksImageDao" >


    <select id="getList" resultType="String">
        SELECT
          image
        FROM
          lb_scene_with_works_image
        WHERE
          deleted = 0
        AND
          scene_id = #{sceneId}
    </select>

    <update id="deleteImage">
        UPDATE
          lb_scene_with_works_image
        SET
          deleted = 1
        WHERE
          scene_id = #{sceneId}
        AND
          image = #{image}
    </update>

    <insert id="insertImage">
        INSERT
        lb_scene_with_works_image
        (
          scene_id,
          image
        )
        VALUES
        (
          #{sceneId},
          #{image}
        )
    </insert>
</mapper>