<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.zpc.mvc.user.dao.CompanyIdentificationDao" >

  <resultMap id="CompanyIdentification" type="cn.zpc.mvc.user.entity.CompanyIdentification">
    <id property="id" column="id"></id>
    <result property="userId" column="user_id"></result>
    <result property="companyName" column="company_name"></result>
    <result property="companyAddress" column="company_address"></result>
    <result property="type" column="type"></result>
    <result property="idcardFront" column="idcard_front"></result>
    <result property="idcardBack" column="idcard_back"></result>
    <result property="businessLicence" column="business_licence"></result>
    <result property="createTime" column="create_time"></result>
    <result property="status" column="status"></result>
    <result property="cause" column="cause"></result>
  </resultMap>

  <select id="getByUserId" resultMap="CompanyIdentification">
    SELECT * FROM
      lb_identification_company
    WHERE
      user_id = #{userId}
      AND
      deleted = 0
  </select>

  <update id="update">
    UPDATE
      lb_identification_company
    SET
    <if test="userId != null">
      user_id = #{userId},
    </if>
    <if test="companyAddress != null">
      company_address = #{companyAddress},
    </if>
    <if test="idcardFront != null">
      idcard_front = #{idcardFront},
    </if>
    <if test="idcardBack != null">
      idcard_back = #{idcardBack},
    </if>
    <if test="businessLicence != null">
      business_licence = #{businessLicence},
    </if>
    <if test="createTime != null">
      create_time = #{createTime},
    </if>
    <if test="status != null">
      status = #{status},
    </if>
    <if test="cause != null">
      cause = #{cause},
    </if>
    <if test="companyName != null">
      company_name = #{companyName}
    </if>
    WHERE
      id = #{id}
  </update>

  <insert id="insert" useGeneratedKeys="true" keyProperty="id">
    INSERT INTO
      lb_identification_company
    (
      user_id,
      company_name,
      company_address,
      type,
      idcard_front,
      idcard_back,
      business_licence,
      create_time,
      status
    )
    VALUES
    (
      #{userId},
      #{companyName},
      #{companyAddress},
      #{type},
      #{idcardFront},
      #{idcardBack},
      #{businessLicence},
      #{createTime},
      #{status}
    )
  </insert>

</mapper>