<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.zpc.mvc.scene.dao.SceneServiceDao" >

    <resultMap id="SceneService" type="cn.zpc.mvc.scene.entity.SceneServ">
        <id column="id" property="id" ></id>
        <result property="typeId" column="scene_service_id"></result>
        <result property="sceneServiceName" column="scene_serv_name"></result>
        <result property="sceneServiceDesc" column="scene_serv_desc"></result>
        <result property="sceneServiceIcon" column="scene_serv_icon"></result>
    </resultMap>

    <resultMap id="SceneServiceResource" type="cn.zpc.mvc.scene.entity.SceneServ">
        <result property="typeId" column="id"></result>
        <result property="sceneServiceName" column="scene_serv_name"></result>
        <result property="sceneServiceDesc" column="scene_serv_desc"></result>
        <result property="sceneServiceIcon" column="scene_serv_icon"></result>
    </resultMap>

    <select id="get" resultMap="SceneService">
        SELECT
          *
        FROM
          lb_scene_service
        WHERE
          id = #{id}
    </select>

    <select id="getIconBySceneId" resultMap="SceneService">
        SELECT *
        FROM
          lb_scene_with_service t1, lb_scene_service t2
        WHERE
          t1.scene_id = #{sceneId}
          AND
          t1.scene_service_id = t2.id
          AND
          t2.deleted = 0
    </select>

    <select id="getResource" resultMap="SceneServiceResource">
        SELECT *
        FROM
          lb_scene_service
        WHERE
          deleted = 0
        AND
          type = 0
    </select>

    <select id="getFoodResource" resultMap="SceneServiceResource">
        SELECT *
        FROM
        lb_scene_service
        WHERE
        deleted = 0
        AND
        type = 1
    </select>

    <delete id="deleteService">
        DELETE
        FROM
          lb_scene_with_service
        WHERE
          scene_id = #{sceneId}
    </delete>

    <insert id="insertSceneService">
        INSERT
          lb_scene_with_service
          (
            scene_id,
            scene_service_id
          )
        VALUES
         (
            #{sceneId},
            #{typeId}
         )
    </insert>

</mapper>