<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.zpc.mvc.sys.dao.CallLogDao" >

    <resultMap id="CallLog" type="cn.zpc.mvc.sys.entity.CallLog">
        <id column="id" property="id"></id>
        <result column="user_id" property="userId"></result>
        <result column="store_id" property="storeId"></result>
        <result column="create_time" property="createTime"></result>
    </resultMap>

    <insert id="insert">
        INSERT INTO
          log_call
        (
          user_id,
          store_id,
          phone,
          create_time
        )VALUES (
          #{userId},
          #{storeId},
          #{phone},
          #{createTime}
        )
    </insert>

    <select id="getList" resultMap="CallLog">
        SELECT
          t1.*
        FROM
          log_call t1, lb_store t2
        WHERE
          t1.store_id = #{storeId}
        AND
          DATEDIFF(NOW(), t1.create_time) &lt; 14
        AND
          t1.store_id = t2.id
        AND
          t2.user_id != t1.user_id
        ORDER by t1.create_time desc
    </select>

</mapper>