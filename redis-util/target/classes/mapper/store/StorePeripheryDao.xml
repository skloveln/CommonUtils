<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.zpc.mvc.store.dao.StorePeripheryDao" >

    <resultMap id="StorePeriphery" type="cn.zpc.mvc.store.entity.StorePeriphery">
        <id property="id" column="id"></id>
        <result property="storeId" column="store_id"></result>
        <!--<result property="imageUrl" column="image_name"></result>-->
        <result property="imageDesc" column="image_desc"></result>
    </resultMap>

    <select id="get" resultMap="StorePeriphery">
        SELECT
          *
        FROM
          lb_store_with_periphery
        WHERE
          id = #{peripheryId}
    </select>

    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        INSERT
          lb_store_with_periphery
        (
          store_id,
          image_desc
        )VALUES (
          #{storeId},
          #{imageDesc}
        )
    </insert>

    <update id="update">
        UPDATE
          lb_store_with_periphery
        SET
        <if test="storeId != null">
            store_id = #{storeId},
        </if>
        <if test="imageDesc != null">
            image_desc = #{imageDesc}
        </if>
        WHERE
          id = #{id}
    </update>

    <select id="getListByStoreId" resultMap="StorePeriphery">
        SELECT *
        FROM
          lb_store_with_periphery
        WHERE
          store_id = #{storeId}
        AND
          deleted = 0
    </select>

    <select id="getPeripheryImages" resultType="String">
        SELECT
          image_name
        FROM
          lb_store_with_periphery_image
        WHERE
          periphery_id = #{peripheryId}
        AND
          deleted = 0
    </select>

    <update id="deleteImage">
        UPDATE
          lb_store_with_periphery_image
        SET
          deleted = 1
        WHERE
          image_name = #{imageName}
    </update>

    <insert id="insertImage">
        INSERT
          lb_store_with_periphery_image
        (
          periphery_id,
          image_name
        )
        VALUES (
          #{peripheryId},
          #{imageName}
        )
    </insert>

    <delete id="delete">
        UPDATE
          lb_store_with_periphery t1,
          lb_store_with_periphery_image t2
        SET
          t1.deleted = 1,
          t2.deleted = 1
        WHERE
          t1.id = #{id}
        AND
          t1.id = t2.periphery_id
    </delete>
</mapper>