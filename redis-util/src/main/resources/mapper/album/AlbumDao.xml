<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.zpc.mvc.album.dao.AlbumDao" >

    <resultMap id="Album" type="cn.zpc.mvc.album.entity.Album">
        <id property="id" column="id"></id>
        <result property="userId" column="user_id"></result>
        <result property="describe" column="describe"></result>
        <result property="province" column="province"></result>
        <result property="city" column="city"></result>
        <result property="address" column="address"></result>
        <result property="phone" column="phone"></result>
        <result property="lat" column="lat"></result>
        <result property="lon" column="lon"></result>
        <result property="tags" column="tags"></result>
        <result property="createTime" column="create_time"></result>
        <result property="likeNum" column="like_num"></result>
        <result property="repostNum" column="repost_num"></result>
        <result property="groupNum" column="group_num"></result>
    </resultMap>

    <select id="getListByCreateTime" resultMap="Album">
        SELECT
        *
        FROM
          lb_album
        WHERE
          deleted = 0
        AND
          status = 1
        OR
        ( status = 0 AND user_id = #{userId})
        ORDER BY create_time DESC
    </select>

    <select id="getByUser" resultMap="Album">
        SELECT
          *
        FROM
          lb_album
        WHERE
          deleted = 0
        AND
          user_id = #{userId}
        AND
        (
          status = 1
        OR
         ( status = 0 AND user_id = #{viewId})
        )
        ORDER BY create_time DESC
    </select>

    <select id="get" resultMap="Album">
        SELECT
          *
        FROM
          lb_album
        WHERE
          deleted = 0
        AND
          id = #{id}
    </select>

    <select id="countAlbum" resultType="Integer">
        SELECT
        count(*)
        FROM
        lb_album
        WHERE
        status = 1
        AND
        deleted = 0
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT
          lb_album
        (
          user_id,
          `describe`,
          province,
          city,
          <if test="address != null and address != ''">
              `address`,
          </if>
          <if test="phone != null and phone != ''">
              phone,
          </if>
          <if test="tags != null and tags != ''">
              tags,
          </if>
          <if test="createTime != null">
              create_time,
          </if>
          <if test="lat != null and lat != 0">
              lat,
          </if>
          <if test="lon != null and lon != 0">
              lon,
          </if>
          deleted
        )VALUES (
          #{userId},
          #{describe},
          #{province},
          #{city},
        <if test="address != null and address != ''">
            #{address},
        </if>
        <if test="phone != null and phone != ''">
            #{phone},
        </if>
        <if test="tags != null and tags != ''">
            #{tags},
        </if>
        <if test="createTime != null">
            #{createTime},
        </if>
        <if test="lat != null and lat != 0">
            #{lat},
        </if>
        <if test="lon != null and lon != 0">
            #{lon},
        </if>
          0
        )
    </insert>

    <update id="deletedAlbum">
        UPDATE
          lb_album
        SET
          deleted = 1
        WHERE
          id = #{id}
    </update>

    <update id="deletedUserAlbum">
        UPDATE
        lb_album
        SET
        deleted = 1
        WHERE
        user_id = #{userId}
    </update>

    <update id="likeAlbum">
        UPDATE
          lb_album
        SET
          like_num = like_num + 1
        WHERE
          id = #{id}
    </update>

    <update id="repostAlbum">
        UPDATE
        lb_album
        SET
        repost_num = repost_num + 1
        WHERE
        id = #{id}
    </update>

    <select id="getUserAlbumGroupByTime" resultMap="Album">
        SELECT
          count(*) as group_num,
          t.*
        FROM lb_album t
        WHERE
          t.deleted = 0
        AND
          t.user_id = #{userId}
        AND
        (
          t.status = 1
        OR
        ( t.status = 0 AND t.user_id = #{viewId})
        )
        GROUP BY DATE_FORMAT(t.create_time,'%Y-%m-%d')
        ORDER BY t.create_time desc
    </select>

    <select id="getUserByDate" resultMap="Album">
        SELECT
          *
        FROM lb_album
        WHERE
          create_time BETWEEN
            #{date}
            AND
            DATE_ADD(#{date},INTERVAL 1 DAY)
        AND
          deleted = 0
        AND
          user_id = #{userId}
        AND
        (
          status = 1
        OR
        ( status = 0 AND user_id = #{viewId})
        )
        ORDER BY create_time desc
    </select>

    <select id="search" resultMap="Album">
        SELECT
          *
        FROM
          lb_album
        WHERE
          status = 1
        AND
          deleted = 0
        <if test="address!=null and address!=''">
          AND
          address like concat('%',#{address},'%')
        </if>
        <if test="keywords !=null and keywords != ''">
          AND
          (
            tags like concat('%',#{keywords},'%')
          OR
            `describe` like concat('%',#{keywords},'%')
          )
        </if>
    </select>


</mapper>