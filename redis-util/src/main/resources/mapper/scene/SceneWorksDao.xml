<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.zpc.mvc.scene.dao.SceneWorksDao" >

    <resultMap id="SceneWorks" type="cn.zpc.mvc.scene.entity.SceneWorks">
        <id column="id" property="id" ></id>
        <result property="sceneId" column="scene_id"></result>
        <result property="worksDesc" column="scene_works"></result>
    </resultMap>

    <select id="getWorksBySceneId" resultMap="SceneWorks">
        SELECT *
        FROM
          lb_scene_with_works
        WHERE
          scene_id = #{sceneId}
    </select>

    <delete id="deleteBySceneId">
        DELETE
        FROM
        lb_scene_with_works
        WHERE
        scene_id = #{sceneId}
    </delete>

    <insert id="insertWorks">
        INSERT
          lb_scene_with_works
        (
          scene_id,
          scene_works
        )VALUES (
          #{sceneId},
          #{worksDesc}
        )
    </insert>

</mapper>