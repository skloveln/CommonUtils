<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.zpc.mvc.store.dao.StoreAdvertDao" >

    <select id="getImage" resultType="String">
        SELECT
          image
        FROM
          lb_store_ad
        WHERE
          store_id = #{storeId}
    </select>

    <insert id="insertAd">
        INSERT
          lb_store_ad
        (
          store_id,
          image
        )VALUES (
          #{storeId},
          #{imageName}
        )
    </insert>

    <insert id="updateAd">
        UPDATE
        lb_store_ad
        SET
        image = #{imageName}
        WHERE
        store_id = #{storeId}
    </insert>

</mapper>