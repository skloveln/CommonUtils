<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.zpc.mvc.store.dao.StoreTitbitsDao" >

    <resultMap id="StoreTitbits" type="cn.zpc.mvc.store.entity.StoreTitbits">
        <id property="id" column="id"></id>
        <result property="storeId" column="store_id"></result>
        <result property="title" column="title"></result>
        <result property="time" column="time"></result>
    </resultMap>

    <select id="get" resultMap="StoreTitbits">
        SELECT
        *
        FROM
        lb_store_with_titbits
        WHERE
        id = #{id}
    </select>

    <select id="getList" resultMap="StoreTitbits">
        SELECT
        *
        FROM
          lb_store_with_titbits
        WHERE
          store_id = #{storeId}
        AND
          deleted = 0
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT
          lb_store_with_titbits
        (
          store_id,
          title,
          time
        )VALUES (
          #{storeId},
          #{title},
          #{time}
        )
    </insert>

    <update id="update">
        UPDATE
          lb_store_with_titbits
        SET
          <if test="title != null">
              title = #{title},
          </if>
          <if test="time != null">
              time = #{time},
          </if>
          <if test="deleted != null">
              deleted = #{deleted},
          </if>
          <if test="storeId != null">
              store_id= #{storeId}
          </if>
        WHERE
          id = #{id}
    </update>

</mapper>