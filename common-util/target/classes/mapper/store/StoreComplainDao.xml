<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.zpc.mvc.store.dao.StoreComplainDao" >

    <resultMap id="StoreContacts" type="cn.zpc.mvc.store.entity.StoreContacts">
        <id property="id" column="id"></id>
        <result property="storeId" column="store_id"></result>
        <result property="phone" column="phone"></result>
        <result property="name" column="name"></result>
    </resultMap>

    <select id="getComplain" resultMap="StoreContacts">
        SELECT
          *
        FROM
          lb_store_complain
        WHERE
          store_id = #{storeId}
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT
        INTO
        lb_store_complain(
        <if test="name != null and name !=''">
            name
        </if>
            phone,
            store_id
        )VALUES (
        <if test="name != null and name !=''">
            #{name},
        </if>
        #{phone},
        #{storeId}
        )
    </insert>
</mapper>