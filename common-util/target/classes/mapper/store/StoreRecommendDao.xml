<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.zpc.mvc.store.dao.StoreRecommendDao" >

    <resultMap id="StoreRecommend" type="cn.zpc.mvc.store.entity.StoreRecommend">
        <result column="store_id" property="storeId"></result>
        <result column="type" property="type"></result>
        <result column="image" property="image"></result>
        <result column="url" property="url"></result>
    </resultMap>

    <select id="getRecommend" resultMap="StoreRecommend">
        SELECT
          *
        FROM
          lb_store_recommend
        WHERE
          type = 1
    </select>

    <select id="getHomeRecommend" resultMap="StoreRecommend">
        SELECT
        *
        FROM
        lb_store_recommend
        WHERE
        type = 3
    </select>

    <select id="getAdvert" resultMap="StoreRecommend">
        SELECT
          *
        FROM
          lb_store_recommend
        WHERE
          type = 2
    </select>

</mapper>