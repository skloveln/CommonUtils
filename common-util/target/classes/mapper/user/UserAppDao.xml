<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.zpc.mvc.user.dao.UserAppDao" >

  <resultMap id="UserApp" type="cn.zpc.mvc.user.entity.UserApp">
    <id property="appOs" column="app_os"></id>
    <result property="versionCode" column="app_version_code"></result>
    <result property="versionName" column="app_version_name"></result>
    <result property="content" column="version_desc"></result>
    <result property="updateUrl" column="download_url"></result>
    <result property="forced" column="is_force"></result>
  </resultMap>


  <select id="findNewestVersionByPlatform" resultMap="UserApp">
    SELECT * FROM
      lb_user_app_version
    WHERE
      app_os = #{appOs}
  </select>


</mapper>