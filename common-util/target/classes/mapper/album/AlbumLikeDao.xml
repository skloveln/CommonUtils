<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.zpc.mvc.album.dao.AlbumLikeDao" >

    <select id="get" resultType="Integer">
        SELECT
          count(*)
        FROM
          lb_album_like
        WHERE
          user_id = #{userId}
        AND
          album_id = #{albumId}
    </select>

    <select id="getCount" resultType="Integer">
        SELECT
          like_num
        FROM
          lb_album_like
        WHERE
          user_id = #{userId}
        AND
          album_id = #{albumId}
    </select>

    <insert id="insert">
        INSERT
        lb_album_like
        (
          album_id,
          user_id
        )
        VALUES (
          #{albumId},
          #{userId}
        )
    </insert>

    <update id="addLikedCount">
        UPDATE
          lb_album_like
        SET
          like_num = like_num + 1
        WHERE
          user_id = #{userId}
        AND
          album_id = #{albumId}
    </update>
</mapper>