<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.zpc.mvc.store.dao.StoreTitbitsImageDao" >

    <resultMap id="StoreTitbitsImage" type="cn.zpc.mvc.store.entity.StoreTitbitsImage">
        <id property="id" column="id"></id>
        <result property="titbitsId" column="titbits_id"></result>
        <result property="imageName" column="image_name"></result>
    </resultMap>

    <select id="getList" resultMap="StoreTitbitsImage">
        SELECT
          *
        FROM
          lb_store_with_titbits_image
        WHERE
          titbits_id = #{titbitsId}
        AND
          deleted = 0
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT
          lb_store_with_titbits_image
        (
          titbits_id,
          image_name
        )VALUES (
          #{titbitsId},
          #{imageName}
        )
    </insert>

    <update id="deleteImage">
        UPDATE
          lb_store_with_titbits_image
        SET
          deleted = 1
        WHERE
          image_name = #{imageName}
        AND
          titbits_id = #{titbitsId}
    </update>

    <update id="deleteTitbits">
        UPDATE
        lb_store_with_titbits_image
        SET
        deleted = 1
        WHERE
        titbits_id = #{titbitsId}
    </update>
</mapper>