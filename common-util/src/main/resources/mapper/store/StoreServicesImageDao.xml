<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.zpc.mvc.store.dao.StoreServicesImageDao" >

    <resultMap id="StoreServicesImage" type="cn.zpc.mvc.store.entity.StoreServicesImage">
        <id property="id" column="id"></id>
        <result property="storeId" column="store_id"></result>
        <result property="imageName" column="image_name"></result>
        <result property="deleted" column="deleted"></result>
    </resultMap>

    <select id="getImagesByStoreId" resultMap="StoreServicesImage">
        SELECT
          *
        FROM
          lb_store_with_service_image
        WHERE
          store_id = #{storeId}
        AND
          deleted = 0
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT
          lb_store_with_service_image
        (
          store_id,
          image_name
        )VALUES (
          #{storeId},
          #{imageName}
        )
    </insert>

    <update id="deleteImage">
        UPDATE
          lb_store_with_service_image
        SET
            deleted = 1
        WHERE
            store_id = #{storeId}
        AND
            image_name = #{imageName}
    </update>

</mapper>