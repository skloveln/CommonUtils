<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.zpc.mvc.sys.dao.SysAdvertDao" >

    <resultMap id="SysAdvert" type="cn.zpc.mvc.sys.entity.SysAdvert">
        <id property="id" column="id"></id>
        <result property="title" column="title"></result>
        <result property="desc" column="desc"></result>
        <result property="type" column="type"></result>
        <result property="storeId" column="storeId"></result>
        <result property="image" column="image"></result>
        <result property="expiredTime" column="expired_time"></result>
        <result property="createTime" column="create_time"></result>
        <result property="weight" column="weight"></result>
        <result property="deleted" column="deleted"></result>
    </resultMap>

    <select id="get">
        SELECT *
        FROM
          lb_sys_advert
        WHERE
          id = #{id}
        and
          deleted = 0
    </select>

    <select id="getAdByType" resultMap="SysAdvert">
        SELECT *
        FROM
          lb_sys_advert
        WHERE
          type = #{type}
        AND
          deleted = 0
        AND
          expired_time > now()
        ORDER BY weight desc
    </select>

    <select id="getAdList" resultMap="SysAdvert">
        SELECT *
        FROM
          lb_sys_advert
        WHERE
          deleted = 0
        AND
          expired_time > now()
        ORDER BY weight desc
    </select>

</mapper>