<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.zpc.mvc.scene.dao.SceneExtraDao" >

    <resultMap id="SceneExtra" type="cn.zpc.mvc.scene.entity.SceneExtra">
        <id column="id" property="id" ></id>
        <result property="name" column="name"></result>
        <result property="image" column="image"></result>
        <result property="extUrl" column="image_url"></result>
        <result property="keywords" column="keywords"></result>
        <result property="url" column="url"></result>
    </resultMap>

    <select id="get" resultMap="SceneExtra">
        SELECT
          *
        FROM
          lb_scene_extra
        WHERE
          deleted = 0
        AND
          id = #{id}
    </select>

    <select id="getList" resultMap="SceneExtra">
        SELECT
          *
        FROM
          lb_scene_extra
        WHERE
          deleted = 0
        ORDER BY create_time DESC
    </select>

    <select id="search" resultMap="SceneExtra">
        SELECT
          *
        FROM
          lb_scene_extra
        WHERE
          deleted = 0
        AND
           keywords like concat('%',#{keywords},'%')
        <if test="address!=null and address!=''">
        AND
            keywords like concat('%',#{address},'%')
        </if>
    </select>

    <update id="updateData">
        UPDATE
          lb_scene_extra
        SET
        <if test="imageName != null">
            image = #{imageName},
        </if>
          keywords = #{keywords}
        WHERE
          id = #{id}
    </update>

    <update id="update">
        UPDATE
        lb_scene_extra
        SET
          image_url = #{extUrl}
        WHERE
        id = #{id}
    </update>

    <select id="selectKeywords" resultType="String">
        SELECT
          keywords
        FROM
          lb_scene_extra
        WHERE
          id = #{id}
    </select>


</mapper>