<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.zpc.mvc.album.dao.AlbumImageDao" >

    <!--<resultMap id="AlbumImage" type="cn.zpc.mvc.album.entity.AlbumImage">-->
        <!--<id property="id" column="id"></id>-->
        <!--<result property="image" column="image"></result>-->
        <!--<result property="userId" column="user_id"></result>-->
        <!--<result property="albumId" column="album_id"></result>-->
        <!--<result property="weight" column="weight"></result>-->
    <!--</resultMap>-->

    <select id="getAlbumImages" resultType="String">
        SELECT
          image
        FROM
          lb_album_image
        WHERE
          deleted = 0
        AND
          album_id = #{albumId}
        ORDER BY weight DESC
    </select>

    <insert id="insert">
        INSERT
          lb_album_image
        (
          image,
          user_id,
          album_id,
          <if test="weight != null">
              weight,
          </if>
          deleted
        )VALUES (
          #{image},
          #{userId},
          #{albumId},
        <if test="weight != null">
            #{weight},
        </if>
          0
        )
    </insert>

    <update id="deleteImage">
        UPDATE
          lb_album_image
        SET
        <if test="deleted != null">
            deleted = 1,
        </if>
          user_id = #{user_id}
        WHERE
          image = #{image}
        AND
          user_id = #{userId}
    </update>


</mapper>