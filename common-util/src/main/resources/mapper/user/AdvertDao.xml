<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.zpc.mvc.user.dao.AdvertDao" >

  <resultMap id="PageAdvert" type="cn.zpc.mvc.user.entity.PageAdvert">
    <id property="id" column="id"></id>
    <result column="ext" property="ext"></result>
    <result column="type" property="type"></result>
    <result column="image" property="imageUrl"></result>
  </resultMap>

  <select id="getAdvert" resultMap="PageAdvert">
      SELECT
        *
      FROM
        lb_page_advert
      WHERE
        id = 1
  </select>

</mapper>